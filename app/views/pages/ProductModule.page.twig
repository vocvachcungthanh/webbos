		function buildSlide(params) {
$(".build__slide").slick({
slidesToShow: 5,
slidesToScroll: 1,
dots: true,
arrows: false,
autoplay: true,
dots: false,
arrows: false


});
}
buildSlide()
	</script>
{% endblock %}
